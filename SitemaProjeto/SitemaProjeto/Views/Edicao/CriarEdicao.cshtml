@model SitemaProjeto.Models.Edicao

@{
    ViewData["Title"] = "CriarEdicao";
}

<!DOCTYPE html>
<html lang ="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" href="~/css/createedicao.css"/>
</head>

<style>
    body {
        background-image: url('/Images/2.png');
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>
<div class="row">
    <div class="col-md-4">
        <div class="card-create">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
               <label>Descrição</label>
                <input asp-for="Descricao" class="form" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Válido de</label>
                <input asp-for="ValidoDe" class="form" />
                <span asp-validation-for="ValidoDe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Válido até</label>
                <input asp-for="ValidoAte" class="form" />
                <span asp-validation-for="ValidoAte" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
        <p></p>
        <div>
         <a asp-action="Index">Voltar</a>
        </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
