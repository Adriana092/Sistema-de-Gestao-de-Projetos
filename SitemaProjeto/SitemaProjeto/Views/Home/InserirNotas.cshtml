@model SitemaProjeto.Models.Notas

@{
    ViewData["Title"] = "InserirNotas";
}
<h6>Insira a média e o número de ects feitos consoante o documento retirado dos Serviços Académicos.</h6>
<label class=alert-dark>Todos os dados submetidos serão sujeitos a análise.</label>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="InserirNotas">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Número Mecanográfico:</label>
                <input asp-for="Numero_Mec" class="form-control" />
                <span asp-validation-for="Numero_Mec" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Número de ects feitos:</label>
                <input asp-for="Num_Cadeiras" class="form-control" />
                <span asp-validation-for="Num_Cadeiras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Média:</label>
                <input asp-for="Media" class="form-control" />
                <span asp-validation-for="Media" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Submeter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Projetos" asp-action="InscricaoProjetos">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
