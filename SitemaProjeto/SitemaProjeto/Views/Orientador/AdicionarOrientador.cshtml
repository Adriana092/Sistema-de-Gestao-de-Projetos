@model SitemaProjeto.Models.Orientador

@{
    ViewData["Title"] = "AdicionarOrientador";
}
<!DOCTYPE html>
<html lang ="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" href="~/css/createori.css"/>
</head>

<style>
    body {
        background-image: url('/Images/2.png');
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>


<div class="row">
    <div class="col-md-4">   
        <div class="card-criar">
        <h2>Adicionar Orientador</h2>
        <form asp-action="AdicionarOrientador">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                 <label>Username *</label>
                <input asp-for="Username" class="form" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Nome</label>
                <input asp-for="Nome" class="form" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Instituição</label>
                <input asp-for="Instituicao" class="form" />
                <span asp-validation-for="Instituicao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Palavra Passe</label>
                <input asp-for="Pass" class="form" />
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
        <div>
        <a asp-action="Index">Ir para a lista de Orientadores</a>
        </div>

        <p></p>
        <label>*O Username refere-se ao nome que está antes do utad.pt no email.</label>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
