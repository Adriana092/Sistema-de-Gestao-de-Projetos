@model IEnumerable<SitemaProjeto.Models.Aluno>

@{
    ViewData["Title"] = "Index";
}

<h2>Lista de Alunos</h2>

<p>
    <a asp-action="CriarAluno">Adicionar Aluno</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                <label>Número Mecanográfico</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroMec)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.IdAluno">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
