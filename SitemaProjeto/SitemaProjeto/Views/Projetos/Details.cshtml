@model SitemaProjeto.Models.Projeto

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang ="en">
    <head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" href="~/css/site.css"/>
</head>

<body>
<div>
    <div>
        <h1>Detalhes do Projeto</h1>
    </div>
    <hr/>
         <dl class="row">
                     <dt class = "col-sm-2">
                        <label>Título:</label>
                     </dt>
                     <dd class = "col-sm-10">
                         @Html.DisplayFor(model => model.Titulo)
                     </dd>
                     <dt class = "col-sm-2">
                         <label>Número de Alunos:</label>
                     </dt>
                     <dd class = "col-sm-10">
                         @Html.DisplayFor(model => model.NumAlunos)
                     </dd>
                     <dt class = "col-sm-2">
                         <label>Área de Investigação:</label>
                     </dt>
                     <dd class = "col-sm-10">
                         @Html.DisplayFor(model => model.AreaInvestigacao)
                     </dd>
                     <dt class = "col-sm-2">
                        <label>Centro de Investigação:</label>
                     </dt>
                     <dd class = "col-sm-10">
                         @Html.DisplayFor(model => model.CentroInvestigacao)
                     </dd>
                     <dt class = "col-sm-2">
                         <label>Apresentação:</label>
                     </dt>
                     <dd class = "col-sm-10">
                         @Html.DisplayFor(model => model.Apresentacao)
                     </dd>
                     <dt class = "col-sm-2">
                         <label>Objetivos:</label>
                     </dt>
                     <dd class = "col-sm-10">
                          @Html.DisplayFor(model => model.Objetivos)
                     </dd>
                     <dt class = "col-sm-2">
                        <label>Edição:</label>
                     </dt>
                     <dd class = "col-sm-10">
                         @Html.DisplayFor(model => model.IdEdicaoNavigation.Nome)
                     </dd>
                     <dt class = "col-sm-2">
                         <label>Orientador:</label>
                     </dt>
                     <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.IdOrientadorNavigation.Nome)
                     </dd>
                      <dt class = "col-sm-2">
                         <label>Coorientadores:</label>
                     </dt>
                     <dd class = "col-sm-10">
                          @Html.DisplayFor(model => model.CoorientadorInterno)
                     </dd>
                      <dt class = "col-sm-2">
                         <label>Externo*:</label>
                     </dt>
                     <dd class = "col-sm-10">
                          @Html.DisplayFor(model => model.CoorientadorExterno)
                     </dd>
                 </dl>
            </div>
</body>
<div>
    <a asp-action="Catalogo">Voltar para o Catálogo de Projetos</a>
</div>
<p></p>
*orientador que não pertence à UTAD
</html>

