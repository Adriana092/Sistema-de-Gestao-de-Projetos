@model SitemaProjeto.Models.Projeto

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProjeto" />
            <div class="form-edicao">
                <div>Selecione a Edição:</div>
                <select asp-for="IdEdicao" asp-items="@ViewBag.Edicao">
                </select>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Copiar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<p></p>
<div>
    <a asp-action="Index">Voltar para a Lista de Projetos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
